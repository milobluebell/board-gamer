/* components/curtain.wxss */
.curtain-wrapper {
  color: white;
  width: 100vw;
  height: 56vh;
  position: absolute;
  left: 0;
  top: 22vh;
  z-index: 1001;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-weight: 600;
  font-size: 16rpx;
  width: 100%;
  white-space: nowrap;
  text-align: center;
}
.curtain-wrapper .container:last-child {
  margin-right: 50%;
  transform: translate(50%);
}
.curtain-wrapper .container {
  height: 64rpx;
  width: 160rpx;
  word-wrap: break-word;
  border-radius: 20rpx;
  display: inline-block;
  margin-left: 50%;
  transform: translate(-50%);
  position: relative;
}

.curtain-wrapper .container .anchor {
  height: 100%;
  width: 2rpx;
  visibility: hidden;
  display: block;
  position: absolute;
  left: calc(-50vw + 80rpx);
  top: 0;
  background: red;
}

.curtain-wrapper .container .divider {
  height: 1rpx;
  width: 100%;
  background-color: rgb(48, 48, 48);
  margin-top: 12rpx;
}

.curtain-wrapper .container .stage-name {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  padding: 6rpx 24rpx;
  background-color: gray;
}

.curtain-wrapper .container .stage-dialogue {
  position: relative;
  font-size: 12rpx;
  font-size: 200;
  text-align: center;
  color: gray;
  background: url("https://public-bucket-1252070958.cos.ap-guangzhou.myqcloud.com/board-gamer/pick.jpg");
}

